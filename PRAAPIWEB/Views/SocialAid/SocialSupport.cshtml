@model IEnumerable<PRAAPIWEB.Models.Socialhelparticle>
@{
    var imageUrls = ViewBag.ImageUrls as Dictionary<int, string>;
    var articleLinks = ViewBag.ArticleLinks as Dictionary<int, List<ArticleLink>>;
    ViewData["Title"] = "Социальная поддержка";
}

<style>
    .article-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .article-card {
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .article-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .article-content {
        padding: 2rem;
    }

    .article-title {
        font-size: 1.8rem;
        color: #212529;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .article-text {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #495057;
        margin-bottom: 2rem;
    }

    .resources-title {
        font-size: 1.4rem;
        margin-bottom: 1.5rem;
        color: #212529;
        border-bottom: 2px solid #4361ee;
        padding-bottom: 0.5rem;
    }

    .resource-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

    .resource-item {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1.2rem;
        transition: all 0.3s ease;
    }

        .resource-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border-color: #4361ee;
        }

    .resource-link {
        display: flex;
        align-items: flex-start;
        text-decoration: none;
        color: inherit;
    }

    .resource-icon {
        font-size: 1.5rem;
        margin-right: 1rem;
        color: #4361ee;
        flex-shrink: 0;
    }

    .resource-content {
        flex-grow: 1;
    }

    .resource-title {
        font-weight: 600;
        color: #4361ee;
        margin-bottom: 0.5rem;
    }

    .resource-description {
        color: #6c757d;
        font-size: 0.95rem;
    }

    @@media (max-width: 768px) {
        .article-image {
            height: 200px;
        }

        .article-content {
            padding: 1.5rem;
        }
    }
</style>

<div class="article-container">
    @foreach (var article in Model)
    {
        <div class="article-card">
            @if (imageUrls != null && imageUrls.ContainsKey(article.Id))
            {
                <img src="@imageUrls[article.Id]" alt="Изображение статьи" class="article-image">
            }
            <div class="article-content">
                <h1 class="article-title">@article.Topic</h1>
                <div class="article-text">@Html.Raw(article.Content.Replace("\n", "<br>"))</div>

                @if (articleLinks != null && articleLinks.ContainsKey(article.Id))
                {
                    <h2 class="resources-title">Полезные ресурсы</h2>
                    <div class="resource-list">
                        @foreach (var link in articleLinks[article.Id])
                        {
                            <div class="resource-item">
                                <a href="@link.Url" class="resource-link" target="_blank">
                                    <i class="@link.Icon resource-icon"></i>
                                    <div class="resource-content">
                                        <div class="resource-title">@link.Title</div>
                                        <div class="resource-description">@link.Description</div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}